{% extends 'admin/base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
   <div class="container mb-5">
    <h1 class="text-center mt-4 mb-3">Utilisateur  : {{user.getFullname}}</h1>
    <table class="table table-hover mt-4">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ user.firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ user.lastname }}</td>
            </tr>
            <tr>
                <th>PasswordUser</th>
                <td>{{ user.PasswordUser }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Avatar</th>
                <td><img style="max-height: 100px;max-width: 100px; border-radius: 10%;" src="{{ asset("upload/users/"~ user.avatar) }}" ></td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ user.slug }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ user.content }}</td>
            </tr>
            <tr>
                <th>Couverture</th>
                 <td><img style="max-height: 100px;max-width: 100px; border-radius: 10%;" src="{{ asset("upload/users/"~ user.couverture) }}" ></td>
            </tr>
        </tbody>
    </table>

    <a class=" btn btn-danger"  href="{{ path('user_index') }}">Retour vers index</a>

    <a  class=" btn btn-success ml-4"  href="{{ path('user_edit', {'id': user.id}) }}">edit</a>

    {{ include('admin/user/_delete_form.html.twig') }}
    </div>
{% endblock %}
