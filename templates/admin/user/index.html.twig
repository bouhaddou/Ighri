{% extends 'admin/base.html.twig' %}

{% block title %}Utilisateurs{% endblock %}

{% block body %}
<div class="container">
    <h1 class="text-center mt-4 mb-3">gestion d'utilisateurs</h1>
    <a class="h5" href="{{ path('user_new') }}">Cr√©er un nouveau Utilisateur</a>
    <table class="table table-hover mt-4">
        <thead>
            <tr>
                <th>Nom Complet</th>
                <th>Photos</th>
                <th>Email</th>
                <th>Job</th>
                <th>Introduction</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users.data %}
            <tr>
                <td>{{ user.getFullname }}</td>
                <td><img style="max-height: 50px;max-width: 60px; border-radius: 50%;" src="{{ asset("upload/users/"~ user.avatar) }}" ></td>
                <td>{{ user.email }}</td>
                <td>{{ user.slug|slice(0,30) }}</td>
                <td>{{ user.content|slice(0,40) }}</td>
                <td>
                    <a class="mr-2 text-primary" href="{{ path('user_show', {'id': user.id}) }}"><i class="fas fa-eye"></i></a>
                    <a class="text-success" href="{{ path('user_edit', {'id': user.id}) }}"><i class="fas fa-edit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
</div>
{% endblock %}
