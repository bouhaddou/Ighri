{% extends 'admin/base.html.twig' %}

{% block title %}Administration des annonces{% endblock %}

{% block body %}


<div class="container-fluid">
    <h2 class="my-1 mt-4">Gestion des Message</h2>
<table class="table table-hover mt-4 ">
	<thead>
		<tr>
			<th>Id</th>
            <th>Nom Complet</th>
            <th>Email</th>
            <th>Obejt</th>
            <th>Message</th>
            <th>Actions</th>
		</tr>
	</thead>
	<tbody>
    {% set contacts = pagination.getData %}
            {% for contact in contacts %}
                <tr>
                    <td>{{ contact.id }}</td>
                    <td>{{ contact.Nomcomplet | slice(0,30) }} </td>
                    <td>
                       {{ contact.email  }} </td>
                    <td>
                       {{ contact.objet  }} </td>
                    </td>
                     <td>
                       {{ contact.message  }} </td>
                    </td>
                    <td>
                        <a href="" class="bn  p-1 mr-1">
                            <i class="fas fa-eye text-info"></i>
                        </a>
                        <a href="{{ path('deletecontact', { 'id': contact.id }) }}" class="bn  p-1">
                            <i class="fas fa-trash text-danger"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}

	</tbody>
</table>
<div class="d-flex justify-content-center">
{{ pagination.display() }}
</div>
</div>
{% endblock %}
