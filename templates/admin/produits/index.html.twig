{% extends 'admin/base.html.twig' %}

{% block title %}Produits index{% endblock %}

{% block body %}
<div class="" style="margin: 0px 80px;">
    <h1 class="text-center mt-3 mb-3">Gestion des Produits</h1>
    <a class="btn btn-success" href="{{ path('produits_new') }}">Cr√©er un Produit</a>
    <table class="table table-hover mt-2">
        <thead>
            <tr>
                <th>Id</th>
                <th>Reference</th>
                <th>Slug</th>
                <th>Content</th>
                <th>Poids</th>
                <th>Prix</th>
                <th>Description</th>
                <th>Informations</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in paginations.getData %}
            <tr>
                <td>{{ produit.id }}</td>
                <td>{{ produit.reference }}</td>
                <td>{{ produit.slug }}</td>
                <td>{{ produit.content|slice(0,100)|raw }}</td>
                <td>{{ produit.poids }}</td>
                <td>{{ produit.prix }}</td>
                <td>{{ produit.description|slice(0,100)|raw }}</td>
                <td>{{ produit.informations|slice(0,100)|raw }}</td>
                <td>{{ produit.image }}</td>
                <td>
                    <a class="mt-3 text-info" href="{{ path('produits_show', {'id': produit.id}) }}"><i class="fas fa-eye"></i></a>
                    <a class="mt-3 text-success" href="{{ path('produits_edit', {'id': produit.id}) }}"><i class="fas fa-edit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
    <div class="d-flex justify-content-center">
        {{ paginations.display() }}
    </div>
</div>
{% endblock %}
