{% extends 'admin/base.html.twig' %}

{% block title %}Produits{% endblock %}

{% block body %}
<div class="container mb-5">
    <h1 class="text-center mt-3 mb-3">Produit</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ produit.id }}</td>
            </tr>
            <tr>
                <th>Reference</th>
                <td>{{ produit.reference }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ produit.slug }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ produit.content }}</td>
            </tr>
            <tr>
                <th>Poids</th>
                <td>{{ produit.poids }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ produit.prix }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ produit.description }}</td>
            </tr>
            <tr>
                <th>Informations</th>
                <td>{{ produit.informations }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ produit.image }}</td>
            </tr>
        </tbody>
    </table>

    <a class="mt-3 btn btn-danger" href="{{ path('produits_index') }}">Retour</a>

    <a class="btn btn-success mt-3" href="{{ path('produits_edit', {'id': produit.id}) }}">edit</a>

    {{ include('admin/produits/_delete_form.html.twig') }}
</div>
{% endblock %}
