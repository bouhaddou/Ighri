{% extends 'admin/base.html.twig' %}

{% block title %}Administration des annonces
{% endblock %}

{% block body %}

	<div class="container-fluid">
		<h2 class="my-1 mt-4">Gestion des Commentaires</h2>
		<table class="table table-hover mt-4">
			<thead>
				<tr>
					<th>Id</th>
					<th>Nom & Pr√©nom</th>
					<th>post</th>
					<th>rating</th>
					<th>date</th>
					<th>Commentaire</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				{% set comments = pagination.getData %}
				{% for comment in comments %}
					<tr>
						<td>{{ comment.id }}</td>
						<td>{{ comment.author.getFullname | slice(0,40) }}</td>
						
						<td>
                        <img alt="avatar " src="{{asset('/upload/posts/' ~ comment.post.avatar ) }}" class="avatar avatar-mini">
							{{ comment.post.titre }}
						<td>
							{{ comment.rationg }}
						</td>
						<td>
							{{ comment.datepub | date('d-m-Y') }}
						</td>
						<td>
							{{ comment.comment | slice(0,60) | raw}}
							......!!
						</td>
						<td>
							<a href="" class="bn  p-1 mr-1">
								<i class="fas fa-edit text-success"></i>
							</a>
							<a href="{{ path('deletecomment',{ 'id' : comment.id  }) }}" class="bn  p-1">
								<i class="fas fa-trash text-danger"></i>
							</a>
						</td>
					</tr>
				{% endfor %}

			</tbody>
		</table>
		<div class="d-flex justify-content-center">
			{{ pagination.display() }}
		</div>
	</div>
{% endblock %}

