{% extends 'admin/base.html.twig' %}

{% block title %}Tableau de bord !!{% endblock %}

{% block body %}
  
    <div class="row mt-4 mr-3 ml-3   ">
        <div class="col bg-success p-2 ml-2 mr-2 rounded">
            <div class="row ">
                <div class="col "><i class="fas fa-users fa-5x text-danger"></i></div>
                <div class="col"><h3>{{ stats.user  }} Utilisateurs</h3></div>
            </div>
        </div>
        <div class="col bg-info p-2 ml-2 mr-2 rounded">
            <div class="row ">
                 <div class="col "><i class="fas fa-users fa-5x text-primary"></i></div>
                <div class="col"><h3>{{ stats.post  }} annonces Post√©es</h3></div>
            </div>
        </div>
        <div class="col bg-danger p-2 ml-2 mr-2 rounded">
            <div class="row ">
                <div class="col"><i class="fas fa-users fa-5x text-secondary"></i></div>
                <div class="col"> <h3>{{ stats.comment  }} Avis</h3></div>
            </div>
        </div>
    </div>
    <br>
    <div class="row ml-3 mr-3">
        <div class="col">
            <div class="alert alert-success">
                <h2 class="alert-heading my-3"><i class="fas fa-arrow-up"></i>  Les annonces populaires</h2>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Annonces</th>
                            <th>Proprio</th>
                            <th>Moyenne</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for post in bestpost %}
                        <tr>
                            <td>{{ post.titre }}</td>
                            <td>
                               <img alt="avatar " src="{{asset('./upload/users/' ~ post.avatar ) }}" class="avatar avatar-mini">
							    {{ post.firstname }}
                                {{ post.firstname }}  {{ post.lastname }}
                            </td>
                            <td>
                              <span class="badge badge-dark">{{ post.note | number_format(1,","," ") }}</span>
                            </td>
                        </tr>
                    {% endfor %}
                    <tbody>
                </table>
            </div>
        </div>
        <div class="col">
            <div class="alert alert-danger">
                <h2 class="alert-heading my-3"><i class="fas fa-arrow-down"></i> Les pires populaires</h2>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Annonces</th>
                            <th>Proprio</th>
                            <th>Moyenne</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for post in badpost %}
                            <tr>
                                <td>{{ post.titre }}</td>
                                <td>
                                    <img alt="avatar " src="{{asset('./upload/users/' ~ post.avatar ) }}" class="avatar avatar-mini">
                                    {{ post.firstname }}
                                    {{ post.firstname }}
                                    {{ post.lastname }}
                                </td>
                                <td>
                                    <span class="badge badge-dark">{{ post.note | number_format(1,","," ") }}</span>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>






{% endblock %}
