<nav aria-label="Page navigation  ">
	<ul class="pagination ">
		<li class="page-item {% if page == pages or pages == page + 1  %} disabled {% endif %}">
			<a class="page-link   " href="{{ path(route,{'page': page - 1 }) }}" aria-label="Previous">
				<span aria-hidden="true" slass="">&laquo;</span>
			</a>
		</li>
		{% for i in 1..pages %}
			<li class="page-item">
				<a class="page-link {% if page == i %} bg-primary text-light {% endif %}" href="{{ path(route,{'page': i }) }}">{{ i }}</a>
			</li>
		{% endfor %}
		<li class="page-item {% if pages   ==  page  %} disabled  {% endif %}">
			<a class="page-link " href="{{ path(route,{'page': page + 1 }) }}" aria-label="Next">
				<span aria-hidden="true">&raquo;</span>
			</a>
		</li>
	</ul>
</nav>
