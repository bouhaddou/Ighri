{% extends 'base.html.twig' %}

{% block title %}Page d'authentification!{% endblock %}

{% block body %}
{% set xz = ''  %}
{% include "home/menu.html.twig" with { xz : 'login'  }  %}
<div class="container mb-5">
	<div class="row">
		<div class="col-md-2 mt-5">&nbsp;</div>
		<div class="col-md-7 mt-5 ">
			<h3 class="text-center mb-4">
				Connectez Vous !!</h3>
			{% if hasError %}
            <div class="alert alert-danger">
                une erreur est survenue, le nom d'utilisateur ou alors le mot de passe
            </div>
            {% endif %}
			<form action="{{ path('account_login') }}" method="POST">
				<div class="form-group">
					<label for="email">
						Adresse Email :</label>
					<input type="text" value="{{ username }}" class="form-control" name="_username" id="email" placeholder="tapez votre email.....!!">
				</div>
				<div class="form-group">
					<label for="password">Mot de passe :</label>
					<input type="password" class="form-control" name="_password" id="password" placeholder="tapez votre mot de passe.....!!">
				</div>
				<div class="form-group">
					<button type="submit" class="btn btn-primary mt-3 py-2 px-4" > 
					<i class="fas fa-lock"></i> Connexion
					</button>
					 
				</div><a class="btn btn-link" href="{{ path('account_register') }}">
                          <i class="fas fa-sign-in-alt"></i>
                       <strong> Inscription</strong>
                    </a>
			</form>
		</div>
	</div>
</div>
 {% include "partials/footer.html.twig" %} 

{% endblock %}
