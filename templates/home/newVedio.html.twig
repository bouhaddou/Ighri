{% extends 'base.html.twig' %}

{% block title %}New Vedio{% endblock %}

{% block body %}
{% set xz = ''  %}
{% include "home/menu.html.twig" with { xz : 'ighri'  }  %}
<div class="container">
  <div class="row">
		<div class="col-md-12">
		 <h1 class="text-center mt-3 mb-3">Créer une nouvelle vidéo</h1>

        {{ form_start(form) }}
            {{ form_row(form.titre) }}
            {{ form_row(form.content) }}
            <div class="form-group">
				<select name="typeName" class="form-control">
					<option >Youtube</option>
					<option >Facebook</option>
					<option >Autre</option>
				</select>
            </div>
            {{ form_row(form.lien) }}
            <button class="btn btn-primary">{{ button_label|default('Enregistrer') }}</button>
        {{ form_end(form) }}
		</div>
	</div>

</div>
{% endblock %}
