{% extends 'base.html.twig' %}

{% block title %}Tous Les Posts{% endblock %}

{% block body %}
{% set xz = ''  %}
{% include "home/menu.html.twig" with { xz : 'ighri'  }  %}

<div class="hero-wrap hero-bread" style="background-image: url('{{ asset("./upload/posts/"~ posts.avatar ) }}'); max-height:400px;">

	<div class="container">
		<div class="row no-gutters slider-text align-items-center justify-content-center text-danger">
			<div class="col-md-9 ftco-animate text-center">
				<p class="breadcrumbs">
					<span class="mr-2">
						<h1>{{ posts.titre}}</h1>
					</span>
					
				</p>
				<h6 class="mb-0  lead text-light">Bienvenu dans notre site de safran taliouine boi 100%</h6>
			</div>
		</div>
	</div>
</div>

<section class="mt-3 ftco-degree-bg ">
	<div class="container ">
		<div class="row">
			<div class="col-lg-7 mr-1  ftco-animate ">
				<div class="border p-1">
				<div class="bg-secondary">
					<h4 class="mt-2 text-center">{{ posts.titre}}</h4>
				</div>
				<hr>
				<p class="text-center text-dark mt-3">{{ posts.content | raw }}</p>
					<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
						<ol class="carousel-indicators">
						<li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"  ></li>
					{% for image in posts.images %}
							<li data-target="#carouselExampleIndicators" data-slide-to="{{loop.index0 + 1}}" ></li>
					{% endfor %}
						</ol>
						<div class="carousel-inner">
							<div class="carousel-item active ">
								<img style="max-height:450px" src="{{ asset('./upload/posts/'~ posts.avatar ) }}" class="d-block w-100" alt="...">
							</div>
					{% for image in posts.images %}
							<div class="carousel-item  ">
								<img style="max-height:450px" src="{{ asset('./upload/images/'~ image.url ) }}" class="d-block w-100" alt="...">
							</div>
					{% endfor %}
						</div>
						<a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
							<span class="carousel-control-prev-icon" aria-hidden="true"></span>
							<span class="sr-only">Previous</span>
						</a>
						<a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
							<span class="carousel-control-next-icon" aria-hidden="true"></span>
							<span class="sr-only">Next</span>
						</a>
					</div>
					<hr>
				<div class="about-author d-flex p-4 bg-light">
					<div class="bio align-self-md-center mr-3 text-center">
						<img src="{{asset('./upload/users/'~ posts.author.avatar )}}" alt="Image placeholder" class="img-fluid avatar avatar-med  mb-1">
						<span class="badge badge-primary mb-3 p-2  "> {{ posts.author.posts | length }} publications </span>
					</div>
					<div class="desc align-self-md-center">
						<h3>{{ posts.author.getFullname }}</h3>
						<p><strong>{{ posts.author.slug }}</strong></p>
						<p>{{ posts.author.content | slice(0,100) | raw }} .........</p>
					{% if app.user == posts.author %}
						<a href="{{ path('showprofile',{ 'id': posts.id }) }}" class="btn btn-primary disabled"><i class="fas fa-eye"></i> savoir plus</a>
					{% else %}
						<a href="{{ path('showprofile',{ 'id': posts.id }) }}" class="btn btn-primary"> <i class="fas fa-eye"></i> savoir plus</a>
					{% endif %}
					</div>
				</div>
				<div class="pt-4 mt-1">
					<h4 class="mb-3">{{posts.comments | length }} Commentaire(s)</h4>
					<div class=" alert alert-info">
						<div class="alert-heading text-center">
							<div class="row align-items-center">
								<div class="col">
									Note globale donné par nos (ait tmazirte)
								</div>
								<div class="col">
									{% include "partials/rating.html.twig" with {'rating' : posts.getAvgRating } %}
									<br>
									<small>
										(calculée sur
										{{ posts.comments | length }}
										avis !)</small>
								</div>
							</div>
						</div>
					</div>

					
					{% for comment in posts.comments %}
					<ul class="comment-list">
						<li class="comment">
							<div class="vcard bio">
								<img src="{{asset('./upload/users/'~ comment.author.avatar ) }}" alt="Image placeholder">
							</div>
							<div class="comment-body">
								<h3>{{ comment.author.getFullname }} 
									{% set rating = comment.rationg  %}
								   {% include "partials/rating.html.twig" %}
								</h3>
								<div class="meta">{{ comment.datepub | date('d/m/Y') }}</div>
								<p>{{ comment.comment }}</p>
								<p>
									<a href="#" class="reply">jaime</a>
								</p>
							</div>
						</li>
					</ul>
					{% endfor %}
					<!-- END comment-list -->
					<div class="comment-form-wrap pt-4">
					{% if app.user %}
						<h5 class="mb-3">Ajouter un Commentaire</h5>
						{{ form_start(form) }}
						{{ form_widget(form) }}
						<div class="form-group">
							<input type="submit" value="Post Comment" class="btn py-3 px-4 btn-primary">
						</div>
						{{ form_end(form) }}
					{% else %}
						<h3 class="mb-3">Connectez ou inscriez vous pour que vous pouvez commenter cette annonce</h3>
					  <small> <a href="{{ path('account_register') }}" class="btn btn-danger  ">Inscriez vous </a>
					   <a href="{{ path('account_login') }}" class=" btn btn-info ">connectez vous </a>
						</small>
					{% endif %}
						
					</div>
				</div>
			</div>
			</div
			<!-- .col-md-8 -->
			<div class="col-md-4 sidebar ftco-animate border mt-1">
			
		    {% include 'partials/developpeur.html.twig' %}

			</div>

		</div>
	</div>
</section>
<!-- .section -->
	 {% include 'partials/footer.html.twig' %}
{% endblock  %}
